<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="New Database" />
                        <MenuItem mnemonicParsing="false" text="Load Database">
                            <graphic>
                                <ImageView pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="/images/load.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" text="Save Database As...">
                            <graphic>
                                <ImageView pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="/images/save2.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Exit" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Data">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Brews" />
                        <MenuItem mnemonicParsing="false" text="Ledger" />
                        <MenuItem mnemonicParsing="false" text="Recipes" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Calculators">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Alcohol" />
                        <MenuItem mnemonicParsing="false" text="Dilution" />
                        <MenuItem mnemonicParsing="false" text="Measures" />
                        <MenuItem mnemonicParsing="false" text="Sugar to SG" />
                        <MenuItem mnemonicParsing="false" text="Temperature Adjusted SG" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Information">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Add/Edit" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                        <MenuItem mnemonicParsing="false" text="Credits" />
                        <MenuItem mnemonicParsing="false" text="Report a bug" />
                        <MenuItem mnemonicParsing="false" text="Check for updates" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <Button contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" mnemonicParsing="false" text="Brew">
                    <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/images/brew.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                    <tooltip>
                        <Tooltip text="Brews" />
                    </tooltip>
                </Button>
                <Button contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" mnemonicParsing="false" text="Ledger">
                    <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/images/ledger.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </VBox.margin>
                    <tooltip>
                        <Tooltip text="Ledger" />
                    </tooltip>
                </Button>
                <Button contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" mnemonicParsing="false" text="Recipes">
                    <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/images/recipe.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                    </VBox.margin>
                    <tooltip>
                        <Tooltip text="Recipes" />
                    </tooltip>
                </Button>
                <Separator />
                <Button contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" mnemonicParsing="false" text="Calculators">
                    <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/images/calculator.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                    <tooltip>
                        <Tooltip text="Calculators" />
                    </tooltip>
                </Button>
                <Separator />
                <Button contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" mnemonicParsing="false" text="Information">
                    <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/images/information.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                    <tooltip>
                        <Tooltip text="Notes &amp; Information" />
                    </tooltip>
                </Button>
         </children>
      </VBox>
   </left>
</BorderPane>
